{
  "name": "api-solid-nodejs",
  "version": "1.0.0",
  "description": "API Rest using Solid Principles and NodeJS",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node build/server.js",
    "build": "tsup src --out-dir build",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" --ignore-unknown",
    "lint": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeYann/api-solid-nodejs.git"
  },
  "keywords": [
    "NodeJS",
    "Typescript",
    "Rest"
  ],
  "author": "Yan Rodrigues",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codeYann/api-solid-nodejs/issues"
  },
  "homepage": "https://github.com/codeYann/api-solid-nodejs#readme",
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.39.1",
    "@types/bcryptjs": "2.4.6",
    "@types/node": "24.10.0",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/ui": "4.0.15",
    "eslint": "9.39.1",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "pino-pretty": "13.1.2",
    "prettier": "3.6.2",
    "prisma": "6.19.0",
    "tsup": "8.5.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.15"
  },
  "dependencies": {
    "@prisma/client": "6.19.0",
    "bcryptjs": "3.0.3",
    "dotenv": "17.2.3",
    "fastify": "5.6.1",
    "pino": "10.1.0",
    "zod": "4.1.12"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint",
      "npm run format"
    ]
  }
}
